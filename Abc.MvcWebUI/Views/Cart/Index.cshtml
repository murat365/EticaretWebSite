@model Abc.MvcWebUI.Models.Cart
@{
    ViewBag.Title = "Index";
}

<div class="container pb-5">
    <div class="row">
        <div class="col-md-6">
            <h2>Alışveriş Sepeti</h2>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th></th>
                        <th>Quantity</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Sub total</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.CartLines)
                    {
                        <tr>
                            <td>
                              <img src="~/Upload/@item.Product.Image"  width="50" />
                            </td>
                            <td>
                                @item.Quantity
                            </td>
                            <td>
                                @item.Product.Name
                            </td>
                            <td>
                                @item.Product.Price
                            </td>
                            <td>
                                @((item.Product.Price*item.Quantity).ToString("c"))
                            </td>
                        </tr>
                    }

                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="4"></td>
                        <td>
                            @Model.Total().ToString("c")
                        </td>
                    </tr>
                </tfoot>
            </table>

        </div>
    </div>
</div>