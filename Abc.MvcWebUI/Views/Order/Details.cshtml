@model Abc.MvcWebUI.Models.OrderDetailsModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Detay Bilgileri</h2>
            <hr />

            @if (TempData["message"] != null)
            {
                <div class="alert alert-success">
                    @TempData["message"]
                </div>
            }

        <dl class="row">

            <dt class="col-sm-3">username</dt>
            <dd class="col-sm-9">@Model.UserName</dd>



            <dt class="col-sm-3">Order State</dt>
            <dd class="col-sm-9">


                @using (Html.BeginForm("UpdateOrderState", "Order", FormMethod.Post))
                {

                    <d1 class="row">
                        @Html.HiddenFor(i => i.OrderId)
                        <dt class="col-md-8">
                            @Html.EnumDropDownListFor(i => i.OrderState, "Select Order State", new { @class = "form-control" })
                        </dt>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary">
                                Update
                            </button>
                        </div>
                    </d1>
                }




            </dd>

            <dt class="col-sm-3">Order Id</dt>
            <dd class="col-sm-9">@Model.OrderId</dd>

            <dt class="col-sm-3">Order Number</dt>
            <dd class="col-sm-9">@Model.OrderNumber</dd>

            <dt class="col-sm-3">Total</dt>
            <dd class="col-sm-9">
                <i class="fa fa-try" aria-hidden="true"></i>

                @Model.Total
            </dd>

            <dt class="col-sm-3">Order Date</dt>
            <dd class="col-sm-9">@Model.OrderDate</dd>



            <dt class="col-sm-3">Adres</dt>
            <dd class="col-sm-9">
                @Model.AdresBasligi
                <hr />
                @Model.Adres
                <br />
                @Model.Sehir - @Model.Semt - @Model.Mahalle
                <br />
                @Model.PostaKodu
            </dd>


            <dt class="col-sm-3">Products</dt>
            <dd class="col-sm-9">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>

                    @foreach (var item in Model.OrderLines)
                    {

                        <tr>
                            <td>
                                <img src="~/Upload/@item.Image" width="70" />
                            </td>
                            <td>
                                @item.ProductName
                            </td>
                            <td>
                                @item.Quantity
                            </td>
                            <td>
                                <i class="fa fa-try" aria-hidden="true"></i>

                                @item.Price
                            </td>
                            <td>
                                <a href="/Home/Details/@item.ProductId" class="btn btn-primary" target="_blank">
                                    <i class="fa fa-angle-right" aria-hidden="true"></i>

                                    Product Details
                                </a>
                            </td>
                        </tr>

                    }
                </table>
            </dd>


        </dl>

        </div>
    </div>
</div>


